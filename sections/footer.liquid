<footer class="footer">
  <div class="width">

    <div class="footer-top">
      {% for block in section.blocks %}
        {% if block.type == 'navigation' %}
          <div class="footer-column footer-column--nav">
            <h2>
              {{ block.settings.linklist.title }}
            </h2>
            {% for link in block.settings.linklist.links %}
                <li>
                  <a href="{{link.url}}">{{ link.title }}</a>
                </li>
              {% endfor %}
          </div>
        {% elsif block.type == 'newsletter' %}
           <div class="footer-column footer-column--news">
            <h2>
              {{ block.settings.heading }}
            </h2>
            {{ block.settings.text }}
            {% form 'customer', id: 'footer-newsletter' %}
            {% if form.posted_successfully? %}
              <p>You've been subscribed ! </p>
            {% endif %}
            {% if form.erros %}
              <p>{{ form.errors.messages.email }}</p>
            {% endif %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="email" name="contact[email]" placeholder="Email">
            <button type="submit">Subscribe</button>
            
            {% endform %}
          </div>

        {% elsif block.type == 'text' %}
          <div class="footer-column footer-column--text">
            <h2>
              {{ block.settings.heading }}

            </h2>
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% endfor %}

    </div>

    <div class="footer-bottom">
      <p>{{ section.settings.copyright }}</p>
      <ul>
        <li>{% render 'icon-visa' %}</li>
        <li>{% render 'icon-visa' %}</li>
        <li>{% render 'icon-visa' %}</li>
        <li>{% render 'icon-visa' %}</li>
        <li>{% render 'icon-visa' %}</li>
        <li>{% render 'icon-visa' %}</li>
      </ul>
    </div>

  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "copyright",
        "label": "Copyright Text"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "type": "newsletter",
        "name": "Newsletter",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text content"
          }

        ]
      }, {
        "name": "Text",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text content"
          }
        ]
      }, {
        "name": "Navigation column",
        "type": "navigation",
        "settings": [
          {
            "type": "link_list",
            "id": "linklist",
            "label": "Navigation menu"
          }
        ]
      }
    ]
  }
{% endschema %}