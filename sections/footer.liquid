<footer class="footer">
  <div class="width">

    <div class="footer-top">
      {% for block in section.blocks %}
        {% if block.type == 'navigation' %}
          <div class="footer-column">
            <h2>
              {{ block.settings.linklist.title }}
              {% for link in block.settings.linklist.links %}
                <li>
                  <a href="{{link.url}}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </h2>
          </div>
        {% elsif block.type == 'newsletter' %}
           <div class="footer-column">
            <h2>
              {{ block.settings.heading }}

            </h2>
            {{ block.settings.text }}
            <form >
              <input type="email" placeholder="Email adress">
              <button type="submit">Subscribe</button>
            </form>
          </div>

        {% elsif block.type == 'text' %}
          <div class="footer-column">
            <h2>
              {{ block.settings.heading }}

            </h2>
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% endfor %}

    </div>

    <div class="footer-bottom">
      <p>{{ section.settings.copyright }}</p>
    </div>

  </div>
</footer>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "copyright",
        "label": "Copyright Text"
      }
    ],
    "max_blocks": 5,
    "blocks": [
      {
        "type": "newsletter",
        "name": "Newsletter",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text content"
          }

        ]
      }, {
        "name": "Text",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text content"
          }
        ]
      }, {
        "name": "Navigation column",
        "type": "navigation",
        "settings": [
          {
            "type": "link_list",
            "id": "linklist",
            "label": "Navigation menu"
          }
        ]
      }
    ]
  }
{% endschema %}